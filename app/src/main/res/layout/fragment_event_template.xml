<RelativeLayout android:layout_height="80dp"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/event_border">

    <ImageView
        android:id="@+id/templateImage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/sample_party"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/templateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rave Party"
        android:textStyle="bold"

        android:textColor="@color/dirtyWhite"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        />
</RelativeLayout>